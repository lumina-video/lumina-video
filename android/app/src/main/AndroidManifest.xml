<?xml version="1.0" encoding="utf-8"?>
<!--
    lumina-video Demo Application Manifest

    This application demonstrates zero-copy video rendering with lumina-video
    using GameActivity for native Rust/egui integration.
-->
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Network permission for loading video streams -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Hardware features for optimal video playback -->
    <uses-feature android:name="android.hardware.vulkan.level" android:required="false" />
    <uses-feature android:glEsVersion="0x00030000" android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LuminaVideoDemo"
        android:hardwareAccelerated="true"
        android:largeHeap="true">

        <!--
            GameActivity for egui/winit android-game-activity integration.

            This activity hosts the native Rust application which uses egui
            for rendering. The GameActivity provides the native window surface
            and handles input events for the Rust side.
        -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden|keyboard|navigation|uiMode|density"
            android:theme="@style/Theme.LuminaVideoDemo.Fullscreen"
            android:screenOrientation="unspecified"
            android:launchMode="singleTop">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- Handle video file intents -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="video/*" />
            </intent-filter>

            <!-- Metadata for GameActivity native library -->
            <!-- This points to liblumina_video_android.so built from lumina-video-android crate -->
            <meta-data
                android:name="android.app.lib_name"
                android:value="lumina_video_android" />
        </activity>
    </application>

</manifest>
